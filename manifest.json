{
  "name": "Extensión Placeholder",
  "description": "Descripción Placeholder",
  "version": "0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "workers/background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "scripts/mainContentScript.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/placeholder16.png",
      "32": "images/placeholder32.png",
      "48": "images/placeholder48.png",
      "128": "images/placeholder128.png"
    }
  },
  "icons": {
    "16": "images/placeholder16.png",
    "32": "images/placeholder32.png",
    "48": "images/placeholder48.png",
    "128": "images/placeholder128.png"
  }
}